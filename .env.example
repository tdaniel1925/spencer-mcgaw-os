# Spencer McGaw CPA Hub - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED - Core Application
# =============================================================================

# Supabase (https://supabase.com)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Database (Drizzle) - Use pooler format for serverless
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# App URL (for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# INTEGRATIONS
# =============================================================================

# OpenAI (for AI parsing features)
OPENAI_API_KEY=your_openai_api_key

# GoTo Connect Integration
# Get these from GoTo Admin Portal -> Integrations -> OAuth Apps
GOTO_CLIENT_ID=your_goto_client_id
GOTO_CLIENT_SECRET=your_goto_client_secret
GOTO_ACCOUNT_KEY=your_goto_account_key
GOTO_WEBHOOK_SECRET=your_goto_webhook_secret
GOTO_REDIRECT_URI=http://localhost:3000/api/auth/goto/callback

# Microsoft Graph (email integration)
MS_GRAPH_TENANT_ID=your_tenant_id
MS_GRAPH_CLIENT_ID=your_client_id
MS_GRAPH_CLIENT_SECRET=your_client_secret
MS_GRAPH_REDIRECT_URI=http://localhost:3000/api/email/callback

# Nylas (alternative email integration)
NYLAS_API_KEY=your_nylas_api_key
NYLAS_API_URI=https://api.us.nylas.com
NYLAS_CLIENT_ID=your_nylas_client_id
NYLAS_CLIENT_SECRET=your_nylas_client_secret
NYLAS_WEBHOOK_SECRET=your_nylas_webhook_secret

# Twilio (for SMS and Caller ID enrichment)
# Get these from Twilio Console -> Account -> API Keys
# SMS: Buy a phone number at Twilio Console -> Phone Numbers -> Buy a Number
# Webhook: Set SMS webhook URL to https://your-domain.com/api/sms/webhook (POST)
# Pricing: Caller ID lookup ~$0.01/request, SMS ~$0.0075/segment (US)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# VAPI Voice AI (optional)
VAPI_API_KEY=your_vapi_api_key
VAPI_PHONE_NUMBER_ID=your_phone_number_id
VAPI_WEBHOOK_SECRET=your_vapi_webhook_secret

# Resend (email notifications)
# Get your API key from https://resend.com/api-keys
# Verify your domain at https://resend.com/domains
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=notifications@yourdomain.com

# Supabase Auth Email Hook (for custom branded auth emails via Resend)
# Generate a random secret: openssl rand -hex 32
SUPABASE_AUTH_HOOK_SECRET=your_webhook_secret_here

# =============================================================================
# MONITORING - Recommended for production
# =============================================================================

# Sentry (error tracking)
# Get DSN from https://sentry.io -> Project Settings -> Client Keys
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=sntrys_xxx
